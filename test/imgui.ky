#pragma program("imgui", vertex, fragment)

attribute position : vec2 $ POSITION;
attribute texcoord : vec2 $ TEXCOORD0;
attribute color : vec4 $ COLOR0;

sampler texture : sampler2D $ 0;

uniform viewTexel : vec2;

vertex() -> vec3
{
    pos := 2f * position * viewTexel;
	return vec4(pos.x - 1.0, 1.0 - pos.y, 0f, 1f);
}

fragment() -> vec4
{
    return texture2D(texture, texcoord) * color;
}
